extends base

block js
  script(src='/js/home.js')

block content
  div.grid.grid-pad
    div.col-1-1
      h1.text-center
        | Wrapulous is a simple link shortening and click tracking API.
      input(id='shortener' type='url' placeholder='Paste a link here to shorten it.')

  div.grid.grid-pad.result.result-hide
    div.col-1-2.text-center
      h2.marg-tb-2 Short Link:
      a#short-link

    div.col-1-2.text-center
      h2.marg-tb-2 Tracking Data:
      a#tracking-data
