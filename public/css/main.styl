/** HELPERS **/
.inline-block
  display: inline-block
.vert-align
  display: inline-block
  height: 100%
  vertical-align: middle
.inline
  display: inline
.marg-tb
  margin-top: 0.5em
  margin-bottom: 0.5em
.marg-tb-2
  margin-top: 1.5em
  margin-bottom: 1.5em
.text-center
  text-align: center
.pull-right
  float: right
.no-under
  text-decoration: none
.italic
  font-style: italic
.dark
  color: #222
.uppercase
  text-transform: uppercase
.fit
  width: 100%
.plain-link
  color: inherit
.subtle
  color: #a2a2a2
  font-weight: 100
small, .small
  font-size: 0.8em
.reverse
  display: inline-block
  -moz-transform: scaleX(-1); /* Gecko */
  -o-transform: scaleX(-1); /* Opera */
  -webkit-transform: scaleX(-1); /* webkit */
  transform: scaleX(-1); /* standard */
  filter: FlipH; /* IE 6/7/8 */
