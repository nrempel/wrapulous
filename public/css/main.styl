/** BASE STYLES **/
body
  font-family: 'Merriweather Sans', serif
  background-color: white
  color: black
  // font-size: 18px
body,html
  height: 100%
h1,h2,h3,h4,h5,h6
  font-weight: normal
  margin: 0

/* STICKY FOOTER */
*
  margin: 0
html, body
  height: 100%
.page-wrap
  min-height: 100%
  // Equal to footer height
  margin-bottom: -65px
.page-wrap:after
  content: ""
  display: block
.site-footer, .page-wrap:after
  // .push must be the same height as footer
  height: 65px

/** HEADER **/
header
  .grid
    max-width: 1100px
  // background-color: #f9f9f9
  padding-top: 1em
  padding-bottom: 1em
  border-bottom: 1px solid #efefef
  .title
    font-size: 26px
    font-weight 800
    a
      color: inherit
    img
      width: 50px
      height: 50px
      margin-right: .3em
      margin-left: 1em
  .nav
    font-weight: 100
    height: 56px
    line-height: 56px
    a
      padding-right: 1em
      padding-left: 1em

    .bubble:hover
        background: #fafafa
        border-radius: 25px

/** FOOTER **/
footer
  // background-color: #f9f9f9
  border-top: 1px solid #efefef
  .grid
    max-width: 1100px
  padding-top: 1em
  padding-bottom: 1em
  .footer-content
    margin-right: .4em
    margin-left: .4em

