/** INPUTS **/
input
  transition: box-shadow 1s linear
  border:2px solid #dadada
  border-radius:7px

.glow-green
  box-shadow:0 0 7px #0a0

.glow-red
  box-shadow:0 0 7px #a00

input[type="url"],
textarea
  text-align: center
  width: 100%
  margin: 1.0em 0 1.0em 0
  border: 1px solid #ddd
  font-size: 0.8em
  outline: none
  padding: 0.5em


